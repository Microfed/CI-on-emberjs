<div class="build-list-item-properties">
    <div class="build-col build-col-changelist">
        {{attrs.build.changelist}}
    </div>

    <div class="build-col build-col-owner">
        {{attrs.build.owner}}
    </div>

    <div class="build-col build-col-time">
        {{moment-format attrs.build.startedAt 'MM / DD / YYYY'}}
        &nbsp;
        {{fa-icon 'clock-o'}}
        {{moment-format attrs.build.startedAt 'hh:mm a'}}
    </div>

    <div class="build-col build-col-build">
        Build
    </div>

    <div class="build-col build-col-unit">
        Unit test
    </div>

    <div class="build-col build-col-func">
        Functional test
    </div>

    <div class="build-col build-col-spacer"></div>

    <div class="build-col build-col-status">
        {{fa-icon spin=attrs.isInActiveState class=(concat 'icon-state-' attrs.buildState)}}
        <span class="state-title">
            {{state-title attrs.build.state}}
        </span>
    </div>
</div>

{{yield}}
